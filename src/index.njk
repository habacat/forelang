<section class="hero" style="background-image:url('{{ site.background }}')">
  <a class="avatar" href="{{ site.about_url }}" title="自我介绍">
    <img src="{{ site.avatar }}" alt="profile">
  </a>
  <div class="title">Kotokowa</div>
  <div style="color:#66ccff;font-size:1.2rem;margin-top:-.4rem">{{ site.title }}</div>
