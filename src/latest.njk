---
layout: layouts/base.njk
title: 最新文章
permalink: /latest/index.html
---
<div class="container">
  <h1>最新文章</h1>
  <div class="grid">
    {% for p in collections.posts %}
      <article class="card">
        <div class="cover"><img src="{{ p.data.cover | default(site.base + 'assets/img/cover-demo.jpg') }}"></div>
        <div class="body">
          <div class="meta">{{ p.date | date }}</div>
          <h3><a href="{{ p.url }}">{{ p.data.title }}</a></h3>
          <p class="small" style="color:var(--muted)">{{ p.data.summary | default(p.templateContent) | striptags | truncate(160) }}</p>
        </div>
      </article>
    {% endfor %}
  </div>
</div>
